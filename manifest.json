{
    "manifest_version" : 3,
    "name": "Logeion Doubleclick",
    "version": "1.0",
    "description": "Opens a new Logeion tab when a word is double clicked",
    "permissions": [
        "tabs",
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "scripts/detectLanguage.js"
    },
    "content_scripts": [
        {
            "js": ["scripts/main.js"],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}
